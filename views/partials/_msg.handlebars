{{#if success_msg}}
  <script>
    $(document).ready(function() {
  M.toast({
    html: "
    <p>
      {{success_msg}}
    </p>
    <div class="toast-action toast-action--success"></div>
    ",
    inDuration: 400,
    displayLength: 5000
  });
  </script>
  });
{{/if}}
{{#if error_msg}}
  <script>
    $(document).ready(function() {
  M.toast({
    html: "
    <p>
      {{error_msg}}
    </p>
    <div class="toast-action toast-action--cancel"></div>
    ",
    inDuration: 400,
    displayLength: 5000
  });
});
  </script>
{{/if}}

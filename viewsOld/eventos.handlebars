<div class="card-body">
    <h3>Eventos</h3>
    <hr>
    <div class="card-columns">
        {{#each eventos }}

        <div class="col-sm-12">
            <div class="card">
                <img src="{{img.url}}" class="card-img-top rounded" alt="{{img.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <a href="/eventos/{{slug}}" class="btn btn-primary">Saiba mais</a>
                </div>
            </div>
        </div>

        {{/each}}

    </div>

    {{#each eventos}}
    {{else}}
    <h4 class="mt-2">Nenhum evento dispon√≠vel</h4>
    {{/each}}

</div>